<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".crea_tablero">

    <com.example.battleship.DibujarTablero1
        android:id="@+id/dibujarTablero1"
        android:layout_width="1080dp"
        android:layout_height="2257px"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBorrar"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-180dp"
        android:layout_marginRight="250dp"
        android:backgroundTint="#ed7d31"
        android:foreground="@drawable/reset"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/btnNext"
        app:layout_constraintTop_toBottomOf="@+id/dibujarTablero1"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="136dp"
        android:layout_height="76dp"
        android:layout_marginTop="-200dp"
        android:backgroundTint="#ed7d31"
        android:foreground="@drawable/iniciarbatalla"
        app:layout_constraintTop_toBottomOf="@+id/dibujarTablero1"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="217dp" />

</androidx.constraintlayout.widget.ConstraintLayout>