<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modo_juego">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="413dp"
        android:layout_height="218dp"
        android:layout_marginStart="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/agua" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="329dp"
        android:layout_height="111dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/agua"
        tools:layout_editor_absoluteX="-102dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="350dp"
        android:layout_height="89dp"
        android:layout_marginTop="144dp"
        android:background="@drawable/modo_jue"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="175dp"
        android:layout_height="46dp"
        android:layout_marginStart="195dp"
        android:layout_marginTop="276dp"
        android:layout_marginBottom="85dp"
        android:background="@drawable/vsandroid"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="185dp"
        android:layout_height="46dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="220dp"
        android:background="@drawable/players2"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="106dp"
        android:layout_height="244dp"
        android:layout_marginStart="80dp"
        android:gravity="top"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.63">

        <Button
            android:id="@+id/button2"
            android:layout_width="99dp"
            android:layout_height="113dp"
            android:backgroundTint="#FFFFFF"
            app:icon="@drawable/ic_launcher_foreground"
            app:iconGravity="top"
            app:iconTint="#CF0606" />

        <Button
            android:id="@+id/button3"
            android:layout_width="99dp"
            android:layout_height="113dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FFFDFD"
            android:foreground="@drawable/ic_modoMulti_foreground" />

    </LinearLayout>

    <Button
        android:id="@+id/back"
        android:layout_width="73dp"
        android:layout_height="68dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#FFFFFF"
        android:text="back"
        android:textColor="#D50000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_cuentaMJ"
        android:layout_width="73dp"
        android:layout_height="68dp"
        android:backgroundTint="#FFFFFF"
        android:text="login"
        android:textColor="#FF0202"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="290dp"
        tools:layout_editor_absoluteY="605dp" />

</androidx.constraintlayout.widget.ConstraintLayout>