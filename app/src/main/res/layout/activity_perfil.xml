<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".perfil">

    <Button
        android:id="@+id/button4"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="44dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="sans-serif-black"
        android:text="X"
        android:textColor="#D50000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="100dp"
                    android:layout_height="125dp"
                    tools:srcCompat="@drawable/ic_perf_gorro" />

                <LinearLayout
                    android:layout_width="102dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="75dp"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="Jugador"
                        android:textColor="#BF0A0A"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="monospace"
                        android:text="Marinero"
                        android:textColor="#BF0A0A"
                        android:textSize="16sp" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:max="300"
                        android:progress="150"
                        android:progressTint="#D50000" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="150/300"
                        android:textColor="#BF0A0A"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:textColor="#BF0A0A"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="50dp"
                        android:layout_height="60dp"
                        android:background="@drawable/modoCla"
                        android:fontFamily="monospace"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="#BF0A0A"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="50dp"
                        android:layout_height="60dp"
                        android:background="@drawable/modoAv"
                        android:fontFamily="monospace"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="#BF0A0A"
                        android:textSize="16sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="23dp">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="28dp"
                        android:layout_height="23dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:background="@mipmap/ic_androi"
                        android:fontFamily="monospace"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="#BF0A0A" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="126dp"
                        android:layout_height="match_parent"
                        android:fontFamily="monospace"
                        android:gravity="center"
                        android:text="22/50"
                        android:textAlignment="center"
                        android:textColor="#BF0A0A"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="118dp"
                        android:layout_height="54dp"
                        android:fontFamily="monospace"
                        android:gravity="center"
                        android:text="18/25"
                        android:textAlignment="center"
                        android:textColor="#BF0A0A"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="10dp"
                        android:layout_height="23dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:background="@drawable/multijug"
                        android:fontFamily="monospace"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="#BF0A0A" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:gravity="center"
                        android:text="15/20"
                        android:textAlignment="center"
                        android:textColor="#BF0A0A"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:gravity="center"
                        android:text="33/42"
                        android:textAlignment="center"
                        android:textColor="#BF0A0A"
                        android:textSize="16sp" />
                </TableRow>

            </TableLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/button6"
                android:layout_width="314dp"
                android:layout_height="39dp"
                android:background="@drawable/borra_prog"
                app:iconTint="#000000" />
        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="182dp"
        android:layout_height="225dp"
        app:srcCompat="@drawable/ancla"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="504dp" />

</androidx.constraintlayout.widget.ConstraintLayout>